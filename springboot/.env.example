## Default development database (populate with remote details)
DB_HOST=***REMOVED***
DB_PORT=5432
DB_NAME=finn_dev
DB_USER=
DB_PASSWORD=

## Test database (JUnit/Testcontainers)
DEVDB_NAME=finn_test

## Optional local Postgres (use SPRING_PROFILES_ACTIVE=local-db)
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=finn_local
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=postgres

## Optional production database (use SPRING_PROFILES_ACTIVE=prod)
PROD_DB_HOST=***REMOVED***
PROD_DB_PORT=5432
PROD_DB_NAME=finn_prod
PROD_DB_USER=
PROD_DB_PASSWORD=

## Firebase Admin credentials (choose ONE of the following)
# Option A: Base64 or raw JSON of service account
FIREBASE_SERVICE_ACCOUNT=
# Option B: Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=

## Security toggles (for local/dev only)
# Require Android app header and Firebase App Check
SECURITY_REQUIRE_APPHEADER=true
SECURITY_REQUIRE_APPCHECK=true
# Disable all auth (ONLY for local testing)
SECURITY_DISABLEAUTH=false
